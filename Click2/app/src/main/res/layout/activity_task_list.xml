<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskList">

    <Button
        android:id="@+id/Button_1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/Button_2"
        app:layout_constraintRight_toLeftOf="@id/Button_2"
        android:layout_marginEnd="8dp"
        android:text="点击1"
        android:textSize="20sp"
        android:background="@drawable/ck_bd"/>

    <Button
        android:id="@+id/Button_2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="点击2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:background="@drawable/ck_bd"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/Button_2"
        app:layout_constraintTop_toTopOf="@id/Button_2"
        android:id="@+id/Button_3"
        android:layout_marginStart="8dp"
        android:text="培训"
        android:textSize="20sp"
        android:background="@drawable/ck_bd"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="@id/Button_2"
        app:layout_constraintTop_toBottomOf="@id/Button_2"
        android:id="@+id/Button_4"
        android:layout_marginTop="30dp"
        android:text="拖动2"
        android:textSize="20sp"
        android:background="@drawable/ck_bd"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="@id/Button_1"
        app:layout_constraintTop_toTopOf="@id/Button_4"
        android:id="@+id/Button_5"
        android:text="拖动1"
        android:textSize="20sp"
        android:background="@drawable/ck_bd"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="@id/Button_3"
        app:layout_constraintTop_toTopOf="@id/Button_4"
        android:id="@+id/Button_6"
        android:text="培训"
        android:textSize="20sp"
        android:background="@drawable/ck_bd"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="@id/Button_5"
        android:background="@drawable/ck_bd"
        app:layout_constraintTop_toBottomOf="@id/Button_5"
        android:layout_marginTop="30dp"
        android:id="@+id/Button_7"
        android:text="缩放1"
        android:textSize="20sp"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="@id/Button_4"
        android:background="@drawable/ck_bd"
        app:layout_constraintTop_toTopOf="@id/Button_7"
        android:id="@+id/Button_8"
        android:text="缩放2"
        android:textSize="20sp"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/Button_8"
        app:layout_constraintLeft_toLeftOf="@id/Button_6"
        android:background="@drawable/ck_bd"
        android:id="@+id/Button_9"
        android:text="培训"
        android:textSize="20sp"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:background="@drawable/ck_bd"
        app:layout_constraintLeft_toLeftOf="@id/Button_7"
        app:layout_constraintTop_toBottomOf="@id/Button_7"
        android:layout_marginTop="30dp"
        android:text="旋转1"
        android:textSize="20sp"
        android:id="@+id/Button_10"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:background="@drawable/ck_bd"
        app:layout_constraintTop_toTopOf="@id/Button_10"
        app:layout_constraintLeft_toLeftOf="@id/Button_8"
        android:text="旋转2"
        android:textSize="20sp"
        android:id="@+id/Button_11"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:background="@drawable/ck_bd"
        app:layout_constraintLeft_toLeftOf="@id/Button_9"
        app:layout_constraintTop_toTopOf="@id/Button_10"
        android:text="培训"
        android:textSize="20sp"
        android:id="@+id/Button_12"/>

</android.support.constraint.ConstraintLayout>